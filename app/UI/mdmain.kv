#:import color kivy.utils.get_color_from_hex
BoxLayout:
	orientation: 'vertical'
	MDToolbar:
		size_hint_y: .1
		title: "FCS-VAL"
		md_bg_color: app.theme_cls.bg_dark
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: .9
		Sidebar:
			size_hint_x: .05	
		BoxLayout:
			orientation: 'vertical'
			size_hint_x: .65
			padding: [10 , 10]
			spacing: 10
			MDLabel:
				text: "DashBoard"
				font_style: "H3"
				size_hint_y: .1
			ControlPanel:
				size_hint_y: .85
			Logger:
				size_hint_y: .25
	
		BoxLayout:
			orientation: 'vertical'
			padding: [5,5]
			size_hint_x: .2
			GraphProperties:						#implementation of GraphProperties
				#MDRaisedButton:
				#	text: "ControlPanel"
		
		BoxLayout:
			orientation: 'vertical'
			size_hint_x: .45
			padding: [10,10]	
			spacing: 10		
			Grapher:								#implementation of Graph
			LogTable:							#implementation of LogTable
		#MDFloatingActionButton:
		#	icon: "plus"
		#	pos: 20,20

<Graph>:
	MDCard:
		radius: [20,10,20,10]
		MDLabel:
			text: "Graph1"
			halign: "center"

<LogTable>:
	MDCard:
		radius: [20,10,20,10]
		MDLabel:
			text: "Log"
			halign: "center"

<Sidebar>:
	MDCard:
		orientation: 'vertical'
		size_hint_x: .05
		spacing: 5
		Label:
			text: ""
			size_hint_y: .05
		Button:
			text: "1"
			size_hint_y: .1   
			halign: "center"
		Button:
			text: "2"
			size_hint_y: .1 
			halign: "center"
		Button:
			text: "3"
			size_hint_y: .1
			halign: "center"
		Label:
			text: ""