#:import utils kivy.utils
#:import Color kivy.utils.get_color_from_hex 


<GridLayout>:
	cols: 2
	spacing: 10
	row_default_height: 0.5 * (self.width - self.spacing[0]) - self.padding[0]
	row_force_default: True

<main>:
	BoxLayout:
		id: main_win
		orientation: "vertical"
		spacing: 10
		space_x: self.size[0]/8
		#height: 100
		Header: 											# HERE WE HAVE THE HEADER WIDGET
			
		BoxLayout:
			orientation: 'horizontal'
			padding: 10 , 5
			Sidebar:										# HERE WE HAVE THE  SIDEBAR WIDGET 
			
			BoxLayout:
				orientation: 'vertical'
				size_hint_x: .4
				Button:
					size_y: .65
					text: 'ControlPanel'
				Button:
					text: ' Logger'
					size_hint_y: .3
			GraphPanel:									# HERE WE HAVE THE GRAPHPANEL WIDGET
			BoxLayout:
				size_hint_x: .35
				orientation: 'vertical'
				Button:
					text: 'Graph 1'
					background_color: Color('#1ABC9C')
					on_press: root.open_graph()
					#size_hint: 0.2,0.1
				Button:
					text: 'Graph 2'
					background_color: Color('#2ECC71')
					on_press: app.stop()
					#size_hint: 0.2,0.1
			